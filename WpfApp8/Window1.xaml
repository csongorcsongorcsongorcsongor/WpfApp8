<Window x:Class="WpfApp8.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="1400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel
            Margin="20"
            Grid.Column="1"
            Background="AliceBlue"
            Name="NameStackPanel"
            >
        </StackPanel>
        <StackPanel
            Grid.Column="2"
                        Margin="20"

            Background="AliceBlue"
            Name="AgeStackPanel"
            >



        </StackPanel>
        <StackPanel
            Grid.Column="3"
                        Margin="38,20,255,20"

            Background="AliceBlue"
            Name="RemoveStackPanel"
            >



        </StackPanel>
        <TextBlock
            Grid.Column="1"
                Text="Name"
                FontSize="20"
                HorizontalAlignment="Center"/>
        <TextBlock
            Grid.Column="2"
                Text="Age"
                FontSize="20"
                HorizontalAlignment="Center"/>
        <Button
            Grid.Row="1"
            Grid.Column="3"
            Background="DodgerBlue"
            
            HorizontalAlignment="Center"
  
            VerticalAlignment="Center"
            Width="60"
            Height="30"
            Content="gomb"
            Click="create"
            />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Text="létrehozás"
            FontSize="30"/>
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Height="70"
            Background="AntiqueWhite"
            Text="Name"
            Name="NameInput"/>

        <TextBox
            Grid.Row="1"
                        

            Grid.Column="2"
            Width="150"
            
            Height="70"
            Background="AntiqueWhite"
            Name="AgeInput"
            Text="Age"/>
        <Button 
            Click="deleteAll"
            Background="DodgerBlue"
            Content="Összes törlése"
            HorizontalAlignment="Center"
            Margin="10 80 10 10"
            VerticalAlignment="Center"
            Width="87" Grid.ColumnSpan="2" Grid.Column="3" Grid.Row="1"
            />
        <StackPanel
            
            Margin="320,20,313,20"

            Background ="LightBlue"
            Name="EditStackPanel" Grid.ColumnSpan="2" Grid.Column="2"
            />
        <Button
            Grid.Row="1"
            Grid.Column="3"
            Background="DodgerBlue"
            
            HorizontalAlignment="Center"
  
            VerticalAlignment="Center"
            Width="132"
            Height="30"
            Content="Módosítások mentése"
            Click="save"
            Name="savebtn"
            Margin="119,54,89,125"
            />

    </Grid>
</Window>
